<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/driver_id_card_container"
    android:layoutDirection="ltr"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scaleType="fillStart">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Camera control and gallery buttons -->
            <ImageButton
                android:id="@+id/camera_capture_button"
                android:layout_width="@dimen/round_button_large"
                android:layout_height="@dimen/round_button_large"
                android:layout_marginEnd="@dimen/shutter_button_margin"
                android:scaleType="fitCenter"
                android:background="@drawable/ic_shutter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/capture_button_alt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.camera.view.PreviewView>


    <TextView
        android:id="@+id/inference_time_val"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:text="0ms"
        android:textColor="@color/bottom_sheet_text_color"
        android:textSize="@dimen/bottom_sheet_text_size" />

    <TextView
        android:id="@+id/detect_tip"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="330dp"
        android:text="识别提示"
        android:textColor="@color/detect_tip"
        android:textSize="@dimen/detect_tip_text_size" />
    <TextView
        android:id="@+id/detect_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="130dp"
        android:ellipsize="end"
        android:text="识别结果："
        android:textColor="@color/detect_data"
        android:textSize="@dimen/detect_tip_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


    <org.tensorflow.lite.examples.objectdetection.OverlayDriverIdView
        android:id="@+id/overlay_driver_id"
        android:layout_width="609dp"
        android:layout_height="346dp"
        app:layout_anchor="@+id/car_bg"
        app:layout_anchorGravity="center" />

    <ImageView
        android:id="@+id/arrow_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        android:src="@drawable/arrow_left" />

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/arrow_right"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/arrow_top"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/arrow_top"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/arrow_bottom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_bottom"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="94dp" />

    <ImageView
        android:id="@+id/car_bg"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:rotation="0"
        android:src="@drawable/camera_idcard_front" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>